<script>
	function fun1()
	{

		 
		
		var tbl=document.getElementById("addTable");
		 
		var j=1;
		var qty,req;
		 
		 
			 
			  qty=document.getElementById("q1").value;
			  req=tbl.rows[1].cells[j].innerHTML;
			  var prod=Number(qty)*Number(req);
		 

			var avail=document.getElementById("Availpts").value;
			 
			if(prod<Number(avail))
			{
				 
				tbl.rows[1].cells[3].innerHTML=prod;
			}
			else
				tbl.rows[1].cells[3].innerHTML="Limit Exceeded";
			
			  
		 
		

	 
		
	}
	function fun2()
	{

		 
		
		var tbl=document.getElementById("addTable");
		 
		var j=1;
		var qty,req;
		 
		 
			 
			  qty=document.getElementById("q2").value;
			  req=tbl.rows[2].cells[j].innerHTML;
			  var prod=Number(qty)*Number(req);
		 

			var avail=document.getElementById("Availpts").value;
			 
			if(prod<Number(avail))
			{
				 
				tbl.rows[2].cells[3].innerHTML=prod;
			}
			else
				tbl.rows[2].cells[3].innerHTML="Limit Exceeded";
			
			  
				
			 var total= Number(tbl.rows[1].cells[3].innerHTML)+Number(tbl.rows[2].cells[3].innerHTML)
			document.getElementById("tot").value=total; 

			if(total<=avail)
				document.getElementById("res").innerHTML="Redeemed Successfully";
			else
				document.getElementById("res").innerHTML="OOPS! Redemption Failed";

	 
		
	}
	 
	 	
	 
	function sub()
	{
		document.getElementById("res").innerHTML="Submitted Successfully";
	}
	
</script>

